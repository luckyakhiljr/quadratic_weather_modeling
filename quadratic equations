      "cell_type": "code",
      "source": [
        "# quadratic_weather_modeling\n",
        "import math\n",
        "\n",
        "a = 1\n",
        "b = -3\n",
        "c = 2\n",
        "\n",
        "d = b**2 - 4*a*c\n",
        "if d >= 0:\n",
        "    x1 = (-b + math.sqrt(d)) / (2*a)\n",
        "    x2 = (-b - math.sqrt(d)) / (2*a)\n",
        "    print(\"Roots are:\", x1, \"and\", x2)\n",
        "else:\n",
        "    print(\"No real roots\")"
      ],

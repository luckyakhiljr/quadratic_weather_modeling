        "# 1  Hardcoding the variables\n",
        "\n",
        "import math\n",
        "\n",
        "def calculate_lcm(a, b):\n",
        "    if a == 0 or b == 0:\n",
        "        return 0\n",
        "    gcd = math.gcd(a, b)\n",
        "    lcm = abs(a * b) // gcd\n",
        "    return lcm\n",
        "\n",
        "\n",
        "num1 = 12\n",
        "num2 = 18\n",
        "result = calculate_lcm(num1, num2)\n",
        "print(f\"The LCM of {num1} and {num2} is {result}.\")"
      ]
    },
